<header id="header">
  <div class="header-inner">
    <div class="header-contents">
      <div class="notice">
        <div class="notice-icon">
          <button type="button" class="uk-button uk-button-default">
            <%= embedded_svg("notice.svg", class: "action-svg notice-svg") %>
            <span class="notice-badge">2</span>
          </button>
          <div class="card uk-card uk-card-default uk-card-body uk-dropdown uk-dropdown-bottom-right" uk-dropdown="mode: click">
            <ul class="dropdown-contents uk-nav uk-dropdown-nav">
            <li>You got a email from your customer.<br>Check your inbox.</li>
            <li class="uk-nav-divider"></li>
            <li>A new function was released.<br>Check your inbox.</li>
            </ul>
          </div>
        </div>
      </div>
      <div class="user">
        <button type="button" class="uk-button uk-button-default">
          <div class="user-icon">
            <%= image_tag  "user.svg" %>
          </div>
          <div class="user-name"><%= current_user.user_name %></div>
        </button>
        <div class="card uk-card uk-card-default uk-card-body uk-dropdown uk-dropdown-bottom-right" uk-dropdown="mode: click">
          <ul class="dropdown-contents uk-nav uk-dropdown-nav">
            <li>
              <%= link_to edit_user_registration_path do %>
                <span class="action-icon"><%= embedded_svg("user.svg", class: "action-svg user-svg") %></span>
                <span>Edit profile</span>
              <% end %>
            </li>
            <li class="uk-nav-divider"></li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete, class: "text-danger" do %>
                <span class="action-icon"><%= embedded_svg("logout.svg", class: "action-svg logout-svg") %></span>
                <span>Sign out<span>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>