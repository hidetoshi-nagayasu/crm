<div id="signinCard" class="uk-card uk-card-default uk-card-body">
  <h2>
    <span class="logo-icon">
      <%= embedded_svg("abc.svg", class: "logo-svg abc-svg") %>
    </span>
    <span class="logo-text">ABC Reform</span>
  </h2>

  <p class="uk-text-center uk-text-muted">Reset password</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <div class="uk-margin">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input" %>
      </div>
    </div>

    <div class="actions uk-margin">
      <%= f.submit "Reset password", class: "uk-button uk-button-primary uk-width-1-1" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>