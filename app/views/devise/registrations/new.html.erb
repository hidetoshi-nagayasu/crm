<div id="signinCard" class="uk-card uk-card-default uk-card-body">
  <h2>
    <span class="logo-icon">
      <%= embedded_svg("abc.svg", class: "logo-svg abc-svg") %>
    </span>
    <span class="logo-text">ABC Reform</span>
  </h2>

  <p class="uk-text-center uk-text-muted">Sing up</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <fieldset class="uk-fieldset">
      <div class="field">
        <div class="uk-margin">
          <%= f.label :user_name %><br />
          <%= f.text_field :user_name, class: "uk-input" %>
        </div>
      </div>

      <div class="field">
        <div class="uk-margin">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input" %>
        </div>
      </>

      <div class="field">
        <div class="uk-margin">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "uk-input" %>
        </div>
      </div>

      <div class="field">
        <div class="uk-margin">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "uk-input" %>
        </div>
      </div>

      <div class="actions uk-margin">
        <%= f.submit "Sign up", class: "uk-button uk-button-primary uk-width-1-1" %>
      </div>
    </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
</div>